generator client {
  provider = "prisma-client-js"
  output   = "/app/generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())

  fullname String
  email String  @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id    Int     @id @default(autoincrement())

  name String
  imageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}